<h1>Dojo Activity Center</h1>

<hr>

<h3>Create an Activity!</h3>

<div class ="jumbotron">
        
            @model DojoActivity.Models.AddActivity
        
        
            <form asp-action="AddActivity" method="POST">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
                <br>
        
                <label asp-for="TimeofEvent"></label>
                <input type="time" asp-for="TimeofEvent" class="form-control">
                <span asp-validation-for="TimeofEvent" class="text-danger"></span>
                <br>
        
                <label asp-for="DateofEvent"></label>
                <input type="date" asp-for="DateofEvent" class="form-control">
                <span asp-validation-for="DateofEvent" class="text-danger"></span>
                <br>
        
                <label asp-for="Duration"></label>
                <input asp-for="Duration" class="form-control">
                <select asp-for="Duration" class="form-control">
                    <option value="hour">Hour(s)</option>
                    <option value="minute">Minute(s)</option>
                </select>
                <span asp-validation-for="Duration" class="text-danger"></span>
                <br>

                <label asp-for="Description"></label>
                <textarea rows="4" cols="50" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <br>



        
                <input type="submit" value="Create" class="btn btn-success">
        
        
    
        
            </form>

